        xmlns:misc="clr-namespace:Qualia.Controls.Misc"
        xmlns:presenter="clr-namespace:Qualia.Controls.Presenter"
        mc:Ignorable="d"
        Background="White"
        Title="Randomizer Viewer" Height="450" Width="800">

    <Grid>
        <TextBlock Margin="3"
                   Name="CtlName"
                   Text="..."
