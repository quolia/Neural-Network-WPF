<base:BaseUserControl x:Class="Qualia.Controls.Presenter.TaskSolutionsPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:base="clr-namespace:Qualia.Controls.Base"
             xmlns:values="clr-namespace:Qualia.Controls.Base.Values"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <values:TextControl Text="Task solutions:" />
        
        <TextBox x:Name="CtlText"
                         Margin="3"
                         Grid.Row="1"
                         Text="No data."
                         AcceptsReturn="True"
                         BorderThickness="0"
                         FontFamily="Consolas" />
        
    </Grid>
</base:BaseUserControl>
